

 /* Description  :   C Program to read temperature in centigrade and display a suitable message according to temperature state 
 * Author       :   Keerthana G Pillai
 * Version      :   1.0
 * Date         :   28-01-2025
*/

#include <stdio.h>

int main() {
    float temp;
    printf("Enter temperature: ");
    scanf("%f", &temp); 
    if (temp < 0) {
        printf("Freezing weather\n");
    } 
    else if (temp >= 0 && temp <= 10) {
        printf("Very Cold weather\n");
    } 
    else if (temp > 10 && temp <= 20) {
        printf("Cold weather\n");
    } 

    return 0;
}

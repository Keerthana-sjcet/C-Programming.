Name: Keerthana 
Date: 06-02-2025
Purpose: Program to set all leading diagonal elements to 0
*/
#include<stdio.h>
int main() {
  int row,column,i,j;
  printf("Enter no of rows and columns");
  scanf("%d%d",&row,&column);
  int matrix[row][column];
  printf("Enter elements");
  for (i=0;i<row;i++){
      for (j=0;j<column;j++){
          scanf("%d",&matrix[i][j]);
      }
  }
  for (i=0;i<row;i++){
      for (j=0;j<column;j++){
          if (i==j){
              matrix[i][j]=0;
          }                   
      }
  }
   for (i=0;i<row;i++){
      for (j=0;j<column;j++){
          printf("%d\t",matrix[i][j]);
      }
      printf("\n");
  }

  return 0;
}
